{% extends 'base.html.twig' %}

{% block title %}Tache
{% endblock %}

{% block body %}
	<p class="fs-3 mb-4" style="margin-top: -30px">Détails de la
		<b>Tache</b>
	</p>

	<table class="table" style="font-size: .9em">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ tache.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ tache.nom }}</td>
			</tr>
			<tr>
				<th>Durée</th>
				<td>{{ tache.duration }}</td>
			</tr>
			<tr>
				<th>Date echeance developpeur</th>
				<td>{{ tache.dateEchUser ? tache.dateEchUser|date('H:i d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Date echeance</th>
				<td>{{ tache.dateEchChef ? tache.dateEchChef|date('H:i d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Date terminer</th>
				<td>{{ tache.dateTerminer ? tache.dateTerminer|date('H:i d/m/Y') : '' }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ tache.description }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex mb-4">
		{% if not is_granted('ROLE_DEV') %}
			<a href="{{ path('app_tache_edit', {'id': tache.id}) }}" class="btn btn-secondary px-4 me-4" style="font-size: .9em">Modifier</a>
		{% endif %}

		{{ include('tache/_delete_form.html.twig') }}
	</div>

	<a href="{{ path('app_tache_index') }}" class="position-relative" style="font-size: .9em; text-decoration: none; left: 1px">
		<i class="bi bi-arrow-left-circle position-relative" style="top: -3px"></i>
		Revenir à la liste
	</a>

{% endblock %}
