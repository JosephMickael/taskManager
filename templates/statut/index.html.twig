{% extends 'base.html.twig' %}

{% block title %}Statut index
{% endblock %}

{% block body %}
	<p class="fs-3 mb-4" style="margin-top: -30px">Liste des
		<b>Statuts</b>
	</p>

	<div class="shadow-sm p-3 rounded-1">
		<a href="{{ path('app_statut_new') }}" class="btn btn-info mb-4 px-4" style="font-size: .9em">
			<span>
				<i class="bi bi-plus-circle position-relative" style="top: -3px"></i>
				Nouveau statut
			</span>
		</a>

		<table class="table table-bordered table-striped align-middle bg-white" style="font-size: .9em">
			<thead class="">
				<tr>
					<th>Etat</th>
					<th class="d-flex justify-content-center">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for statut in statuts %}
					<tr>
						<td>{{ statut.etat }}</td>
						<td>
							<div class="d-flex justify-content-center">
								<a href="{{ path('app_statut_show', {'id': statut.id}) }}" class="fs-5 bi-eye me-4" style="color: black"></a>
								<a href="{{ path('app_statut_edit', {'id': statut.id}) }}" class="fs-5 bi-pencil-square" style="color: orange"></a>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
